#hikari数据源配置
  datasource:
    driver-class-name: com.mysql.cj.jdbc.Driver
    url: jdbc:mysql://localhost:3306/basic?allowMultiQueries=true&useUnicode=true&useAffectedRows=true&characterEncoding=UTF-8&useSSL=false&serverTimezone=Asia/Shanghai
    password: root
    username: root
    hikari:
      connection-timeout: 30000
      minimum-idle: 5
      maximum-pool-size: 20
      auto-commit: true
      idle-timeout: 600000
      pool-name: DataSourceHikaricp
      max-lifetime: 180000
      connection-test-query: SELECT 1



#mybatis-plus配置
mybatis-plus:
  mapper-locations: classpath*:mapper/**/*.xml

